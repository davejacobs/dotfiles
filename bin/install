#!/bin/bash

# Note: Use bash to install, but then switch over
# to ZSH.

set -e

directory="."
interactive="no"
simulate="no"

while getopts "o:is" opt; do
  case "$opt" in
    o) 
      directory=$OPTARG
      ;;
    i)
      interactive="yes"
      ;;
    s)
      simulate="yes"
      ;;
  esac
done

normalize_yn_response() {
  if [[ $1 =~ [Yy](es)? ]]; then
    echo "yes"
  else
    echo "no"
  fi
}

simulatedly_call() {
  if [[ $simulate != "yes" ]]; then
    echo "[calling] '${1}'"
    $1
  else
    echo "[simulation] '${1}'"
  fi
}

interactively_call() {
  if [[ $interactive == "yes" ]]; then
    read -p "[prompt] ${2}? " install_this
    install_this=$(normalize_yn_response $install_this)
    if [[ $install_this == "yes" ]]; then
      simulatedly_call "$1"
    fi
  else
    simulatedly_call "$1"
  fi
}

pushd $directory > /dev/null
  files=$(ls | grep -v -e "^doc" -e "^bin" -e "^config" -e "README.md" -e '~')
  for file in $files; do
    rm -rf $HOME/.${file}
    interactively_call "ln -s $(pwd)/${file} $HOME/.${file}" "Link .${file}"
  done
popd > /dev/null

if [[ ! -d $HOME/.vim/bundle/vundle ]]; then
  interactively_call "git clone https://github.com/gmarik/vundle.git $HOME/.vim/bundle/vundle" "Vundle clone"
fi

interactively_call "vim +BundleInstall +qall" "Vundle installation"
