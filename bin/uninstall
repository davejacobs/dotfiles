#!/usr/bin/env bash

directory=${1-dotfiles}

if [[ $(which brew) ]]; then
  brew remove ack
  brew remove coreutils
  brew remove par
  brew remove gettext
elif [[ $(which pacman) ]]; then
  sudo pacman -Rs ack
elif [[ $(which apt-get) ]]; then
  sudo apt-get autoremove ack-grep
fi

pushd ~ > /dev/null
  for file in $(ls -a); do
    if [[ $(readlink $file) =~ $directory ]]; then
      rm -i $file
    fi
  done
popd > /dev/null
