# Format ls results according to man ls (there are tools
# for this [1])
export LSCOLORS="cxcxdxdxbxexexfxfxeheh"

sourcesafe `brew --prefix`/etc/profile.d/z.sh

# Install Casks to /Applications
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# IPV6 support (if connected directly to non-NAT cable modem):
# sudo ip6config start-v6 en0; sudo ip6config start-stf en0

# [1]: http://geoff.greer.fm/lscolors/

if [ $(which lunchy) ]; then
  LUNCHY_DIR=$(dirname `gem which lunchy`)/../extras
  if [ -f $LUNCHY_DIR/lunchy-completion.bash ]; then
  . $LUNCHY_DIR/lunchy-completion.bash
  fi
fi
