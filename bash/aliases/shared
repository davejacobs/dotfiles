# .bashrc - Aliases
# Sets Bash aliases common to all OSes, including default
# command options, shorthand for locations, and commands/functions

# For sustainable aliases
alias edal='$EDITOR ~/.bash/aliases'
alias edco='$EDITOR ~/.bash/config'

# Default options

alias ls='ls -aG'
alias ll='ls -alF'

# Tools

alias g='git'
alias s='ssh'
alias r='ruby'
alias l='lein'
alias rs='rspec'
alias c='cucumber'
alias t='rspec && cucumber'

# Locations

alias drb='cd ~/Dropbox'
alias dl='cd ~/Downloads'
alias prj='cd ~/Projects'
alias scr='cd ~/Scripts'

# Projects

alias stpr='cd ~/Projects/stats'
alias mipr='cd ~/Projects/mint'
alias wipr='cd ~/Projects/wit.io'
alias scpr='cd ~/Projects/scripts'
alias dfpr='cd ~/Projects/dotfiles'
alias mlpr='cd ~/Projects/ml-clojure'

# Commands

alias publish='cd ~/Projects/wit.io && cap -q blog:post_new'
alias killruby='ps aux | grep ruby | awk "{print $2}" | xargs kill -9'
alias tunnel='ssh -N -L 1234:localhost:80 $1'
alias tunnelp='ssh -N -l david -L 1234:localhost:$2 $1'

alias grep='grep --color=auto -R --include "*.*" $1 *'
