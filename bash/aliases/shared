# .bashrc - Aliases
# Sets Bash aliases common to all OSes, including default
# command options, shorthand for locations, and commands/functions

# For sustainable aliases
alias edal='$EDITOR $HOME/.bash/aliases/shared'
alias edco='$EDITOR $HOME/.bash/config/shared'
alias edfu='$EDITOR $HOME/.bash/functions/shared'

# Default options

alias ls='ls -aG'
alias ll='ls -alF'
alias grep='grep --color=auto'
alias cap='cap -v'
alias tree='tree -C'

# Tools

alias g='git'
alias s='ssh'
alias r='ruby'
alias l='lein'
alias rs='rspec'
alias c='cucumber'
alias t='rspec && cucumber'
alias hb='HandBrakeCLI'

p() {
  psql $1 -c "$2"; 
}

# Locations

alias drb='cd $WIT_DROPBOX_DIR'
alias dl='cd $WIT_DOWNLOADS_DIR'
alias prj='cd $WIT_PROJECTS_DIR'

# Projects

alias stpr='cd $WIT_PROJECTS_DIR/stats'
alias mipr='cd $WIT_PROJECTS_DIR/mint'
alias wipr='cd $WIT_PROJECTS_DIR/wit'
alias scpr='cd $WIT_PROJECTS_DIR/scripts'
alias dfpr='cd $WIT_PROJECTS_DIR/dotfiles'
alias mlpr='cd $WIT_PROJECTS_DIR/ml'

# Commands

alias tunnel='ssh -N -L 1234:localhost:80 $1'
alias tunnelp='ssh -N -l david -L 1234:localhost:$2 $1'
