# .bashrc - Ubuntu
# Configures the Ubuntu terminal window and other Ubuntu-specific options

# Make less friendly for non-text input files, see lesspipe(1)
[[ -x /usr/bin/lesspipe ]] && eval "$(SHELL=/bin/sh lesspipe)"

# Identify the chroot you work in
if [ -z "$debian_chroot" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

# Set fancy prompt
case "$TERM" in
    xterm-color) color_prompt=yes;;
esac

force_color_prompt=yes
color_prompt=

if [ -n "$force_color_prompt" ]; then
  if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
	  color_prompt=yes
  fi
fi

# For non-color setup, remove colors added during default script
if [ "$color_prompt" == "no" ]; then
  PS1="\u@\h\ \W âˆ´ "  
fi
unset color_prompt force_color_prompt

# Enable ls colors and add handy aliases
if [ -x /usr/bin/dircolors ]; then
  [[ -r ~/.dircolors ]] && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"

  alias ls='ls --color=auto'
  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
fi

# Ubuntu-specific aliases (to match what I expect in OS X)
alias mntnet='sudo mount -t vboxsf NetworkDocs ~/Network'
alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'

# Assume that Ubuntu is being used for production Rails environments
export RAILS_ENV=production
